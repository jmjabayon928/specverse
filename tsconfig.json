{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",                        // ✅ Important for Jest + Node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",                                // ✅ Ensure React JSX compatibility
    "incremental": true,

    "baseUrl": "src",                                  // ✅ Allow use of "@/..." imports
    "paths": {
      "@/*": ["*"]
    },

    "types": ["node", "jest"],                         // ✅ Only include known types
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "plugins": [{ "name": "next" }]                    // ✅ Next.js plugin
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/types",
    "tests/**/*",
    "jest.setup.ts"                                    // ✅ For test setup
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ]
}
